{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Unemployment (% of labour force)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "js/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/country_profile_variables.csv"
        },
        "key": "country",
        "fields": ["Unemployment (% of labour force)"]
      } 
    }
  ],
  "mark": {"type": "geoshape", "stroke":"white"},
  "encoding": {
    "color": {
      "field": "Unemployment (% of labour force)",
      "type": "quantitative",
      "scale": {
"type": "threshold",
"domain": [1, 10, 20],
"range": ["#86D700", "#E1DD00", "#F5A500", "#AF550A"] }
    },
    "tooltip": [
      {"field": "Unemployment (% of labour force)", "type": "quantitative", "format": ".2f"}
    ]
  }
}