{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 930,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 170,
      "bind": {
        "input": "range",
        "min": 170,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 180],
      "bind": {
        "input": "select",
        "options": [
          [0, 180],
          [7, 43],
          [101, 4],
          [-70, 10]
        ],
        "labels": ["Centre", "Europe", "SE Asia", "Central America"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"title": "Region", "field": "Region", "type": "nominal"}
        ]
      }
    },
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue", "opacity":0.6}
    },
    
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/country_profile_variables.csv"
            },
            "key": "country",
            "fields": ["Population density (per km2, 2017)"]
          } 
        }
      ],

      "mark": {"type": "geoshape", "stroke":"white"},
      "encoding": {
        "color": {
          "field": "Population density (per km2, 2017)",
          "title": "Population Density (%)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 50, 100, 1000],
            "range": ["#f5d7d7", "#d99a9a", "#c75656", "#C70039", "#581845"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Population density (per km2, 2017)", "type": "quantitative", "format": ".2f", "title":"Population Density (%)"}
        ]
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "background": "#FFF5E1"
  }
}

