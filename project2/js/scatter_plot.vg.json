{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "Scatterplot matrix",
    "data": {
      "url": "data/scatterplot.csv"
    },
    "repeat": {
      "column": [ "Population in thousands (2017)", "GDP: Gross domestic product (million current US$)", "CO2 emission estimates (million tons/tons per capita)" ],
      "row": [ "Economy: Industry (% of GVA)", "Seats held by women in national parliaments %", "Health: Total expenditure (% of GDP)" ]
    },
    "spec": {
      "selection": {
        "my_selection": {"type": "interval", "empty": "none"}
      },
      "mark": "circle",
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {"field": {"repeat": "row"}, "type": "quantitative"},
        "color": {
            "field": "Region", "type": "nominal"
        }
      }
    }
  }