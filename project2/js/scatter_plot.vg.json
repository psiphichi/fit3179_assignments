{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Scatterplot matrix",
  "repeat": {
    "column": [ "Population in thousands (2017)", "GDP: Gross domestic product (million current US$)", "CO2 emission estimates (million tons/tons per capita)" ],
    "row": [ "Economy: Industry (% of GVA)", "Seats held by women in national parliaments %", "Health: Total expenditure (% of GDP)" ]
  },
  "spec": {
    "data": {
      "url": "data/scatterplot.csv"
    },
    "mark": "point",
    "params": [
      { 
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Region",
          "type": "nominal"
        },
        "value": "grey"
      }
    }
  }
}




