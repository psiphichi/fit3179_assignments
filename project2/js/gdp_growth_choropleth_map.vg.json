{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 930,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 170,
      "bind": {
        "input": "range",
        "min": 170,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 180],
      "bind": {
        "input": "select",
        "options": [
          [0, 180],
          [7, 43],
          [101, 4],
          [-70, 10]
        ],
        "labels": ["Centre", "Europe", "SE Asia", "Central America"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"}
        ]
      }
    },
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue", "opacity":0.6}
    },
    
    {
      "data": {
        "url": "js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/gdp_growth.csv"
            },
            "key": "country",
            "fields": ["GDP growth rate in 2005 prices", "Region"]
          } 
        }
      ],

      "mark": {"type": "geoshape", "stroke":"white"},
      "encoding": {
        "color": {
          "field": "GDP growth rate in 2005 prices",
          "title": "GDP Growth Rate (%)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 3, 6, 9],
            "range": ["#CEFAD0", "#99FF99", "#00CC00", "#009900", "#006600"]
          },
          "legend": {"title": ["GDP Growth Rate", "(Annual % in 2005 Price)"]}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"title": "Region", "field": "Region", "type": "nominal"},
          {"field": "GDP growth rate in 2005 prices", "type": "quantitative", "format": ".2f", "title":"GDP Growth Rate"}
        ]
      }
    }
  ],
  "config": {
    "background": "#FFF5E1"
  }
}

